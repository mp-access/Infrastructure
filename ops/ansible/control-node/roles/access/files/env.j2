# Default environment variables
# Docker will inject these variables in the docker-compose file.
# These values will be overwritten if shell contains the same variables

# Database credentials
DB_USER={{ keycloakdb_user }}
DB_PASSWORD={{ keycloakdb_password }}

# Identity provider credentials
KEYCLOAK_USER={{ keycloak_admin_username }}
KEYCLOAK_PASSWORD={{ keycloak_admin_password }}
KEYCLOAK_REALM=access
FRONTEND_REALM=access-frontend
AUTH_SERVER=http://keycloak:8080
JWK_URI=http://keycloak:8080/auth/realms/access/protocol/openid-connect/certs

# Mongo DB credentials
MONGO_DB_NAME=access
MONGO_DB_USER={{ mongodb_user }}
MONGO_DB_PASSWORD={{ mongodb_password }}

GITHUB_WEBHOOK_SECRET={{ github_webhook_secret }}
GITLAB_WEBHOOK_SECRET={{ gitlab_webhook_secret }}

NGINX_CONF=conf.nginx

DOCKER_WORKER_HOST={{ docker_worker_host }}

BACKEND_TAG={{ backend_tag }}
FRONTEND_TAG={{ frontend_tag }}
BACKEND_VERSION={{ backend_version_info }}
